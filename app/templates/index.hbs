
<h4>Available Animals:</h4>
<div class="row">
  <div class="col s8 animalsDiv">
    {{animal-tile model=model addToCart="addToCart"}}
  </div>

  <div class="col s4 usersDiv">
    <h4>Sign-up!</h4>
    {{new-user addUser="addUser"}}
    <br>
    <br>
    <div class="divider">
    </div>

    <br>
    <h4>log in:</h4>
    <ul class="collection">
      {{#each model.users as |user|}}
      <li class="collection-item avatar">
        {{#link-to 'password' user.id user=model}}
        <img src="{{user.picture}}" alt="" class="circle">
        <span class="title userTitle">{{user.name}}</span>
        <a href="#!" class="secondary-content"><i class="material-icons">grade</i></a>
        {{/link-to}}
      </li>
      {{/each}}
    </ul>


  </div>
</div>

<div class="divider">
</div>

<h4>Cart:</h4>
{{animal-cart model=model removeFromCart="removeFromCart"}}
